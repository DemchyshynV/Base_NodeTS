{
  "name": "lagerthashop",
  "version": "1.0.0",
  "description": "Jewellery shop",
  "main": "dist/index",
  "scripts": {
    "start:dev": "node -r dotenv/config --inspect=0.0.0.0:9227 ./dist/",
    "start": "rimraf dist && npm run lint && copyfiles -e src/email-templates/*.ts -f src/email-templates/*.* dist/email-templates/ && tsc-watch --outDir ./dist --onSuccess \"npm run start:dev\" --onFailure \"'echo Compilation Failed'\"",
    "build": "rimraf dist && tsc",
    "tsc": "rimraf dist && npm run lint && tsc --watch",
    "lint": "eslint --fix --ext .ts,.js src"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-templates": "^7.0.5",
    "helmet": "^3.23.0",
    "@hapi/joi": "^17.1.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.13",
    "nodemailer": "^6.4.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/email-templates": "^7.0.1",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/hapi__joi": "^17.1.2",
    "@types/helmet": "^0.0.47",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/nodemailer": "^6.4.0",
    "@types/sequelize": "^4.28.9",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.2.0",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.8",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "author": "Vitaliy Demchyshyn",
  "license": "ISC"
}
